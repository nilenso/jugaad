<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/button_primary_dark"
                android:endColor="@color/button_primary"
                android:angle="270" />
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="@color/button_primary_dark"/>
        </shape>
    </item>
    
    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/button_primary"
                android:endColor="@color/button_primary_dark"
                android:angle="270" />
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="@color/button_primary_dark"/>
        </shape>
    </item>
</selector> 
